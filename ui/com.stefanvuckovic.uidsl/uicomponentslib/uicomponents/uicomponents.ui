component textComp {
	value required valueProperty : string or text or email or password or int or long or date or object or enum
	escape required : boolean
}

component newLine {
	
}

component section {
	allowed_nested_components : ALL
}

component textfield {
	value required valueProperty : string or int or long or text or email or password
	caption required : string
	enabled required : boolean
}

component textarea {
	value required valueProperty : string or text
	caption required : string
	rows required : int
	enabled required : boolean
}

